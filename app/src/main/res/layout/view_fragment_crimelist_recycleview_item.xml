<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/id_view_crimelistitem_cbx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/id_view_crimelistitem_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/id_view_crimelistitem_cbx"
        android:textStyle="bold"
        android:padding="10dp"
        tools:text="Crime Title"
        android:textSize="22sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/id_view_crimelistitem_date_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/id_view_crimelistitem_cbx"
        android:layout_below="@id/id_view_crimelistitem_title_txt"
        android:paddingLeft="12dp"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:textColor="#6968a7"
        tools:text="Crime Date"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/id_view_crimelistitem_date_txt"
        android:background="#000000"/>

</RelativeLayout>